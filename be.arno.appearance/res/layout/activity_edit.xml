<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditActivity" >

    
        <EditText
            android:id="@+id/edtxName"
            style="@style/edtxStyleGirly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:hint="Name" />
		
        <EditText
            android:id="@+id/edtxDate"
            style="@style/edtxStyleGirly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/edtxName"
            android:layout_toLeftOf="@+id/bttnDate"
            android:hint="Date" />
        
		<Button
            android:id="@+id/bttnDate"
            style="@style/bttnStyleGirly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/edtxName"
            android:text="Date" />

		<EditText
            android:id="@+id/edtxTime"
            style="@style/edtxStyleGirly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/edtxDate"
            android:layout_toLeftOf="@+id/bttnTime"
            android:hint="Time" />
        
		<Button
            android:id="@+id/bttnTime"
            style="@style/bttnStyleGirly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/edtxDate"
            android:text="Time" />
          
		
		<RatingBar
            android:id="@+id/ratingBar1"
            style="@style/ratingbarStyleGirly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/edtxTime"
            android:height="64dp" />
    
</RelativeLayout>
