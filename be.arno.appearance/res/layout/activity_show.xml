<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ShowActivity" >
          

          <TextView
            android:id="@+id/textView1"
           	style="@style/textviewLabelStyleGirly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="Name"
            />

        <TextView
            android:id="@+id/textView2"
           	style="@style/textviewContentLargeStyleGirly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="Sandra Paris"
			android:layout_below="@+id/textView1"            
		/>

        <TextView
            android:id="@+id/textView3"
           	style="@style/textviewLabelStyleGirly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="Date of birth"
			android:layout_below="@+id/textView2"            
            />

        <TextView
            android:id="@+id/textView4"
           	style="@style/textviewContentLargeStyleGirly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="15/08/1983"
			android:layout_below="@+id/textView3"            
			/>
        
        
        <TextView
            android:id="@+id/textView5"
           	style="@style/textviewLabelStyleGirly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="Smoke habits"
			android:layout_below="@+id/textView4"            
            />

        <TextView
            android:id="@+id/textView6"
           	style="@style/textviewContentStyleGirly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="Started at the age of 14.\nAddicted to one pack of Marlboro 100's per day."
			android:layout_below="@+id/textView5"            
			/>
        
        <TextView
            android:id="@+id/textView7"
           	style="@style/textviewLabelStyleGirly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="Score"
			android:layout_below="@+id/textView6"            
			/>
              
		<RatingBar
            android:id="@+id/ratingBar1"
            style="@style/ratingbarStyleGirly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView7"
            android:rating="4.5"
            android:isIndicator="true"
            android:height="64dp" />
		
        <Button
            android:id="@+id/button3"
            style="@style/bttnStyleGirly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ratingBar1"
            android:text="Button" />    
        
    </RelativeLayout>

</ScrollView>